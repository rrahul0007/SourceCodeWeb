@model BlastManagerWEB.Models.Users.UserGroupDetailModel
@using BlastManagerWEB.Common
@using BlastManager.Service.Main.Common.CommonMainType
@{
    ViewBag.Title = "Manage User Group";
}
@section styles
{
}
@section body
{
    <!--Search panel-->
    <div class="page-header">
        @using (Html.BeginForm(Constants.Controllers.User_ManageUserGroup, Constants.Controllers.User, FormMethod.Post, new { @id = "frmManageUserGroup", @class = "form-horizontal", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.UserGroupId)
            <fieldset>
                <legend>   @BlastManagerWEB.App_GlobalResources.BlastManagerWebResources.ManageUserGroup</legend>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="UserGroupName">
                        <span class="required">*</span>   @BlastManagerWEB.App_GlobalResources.BlastManagerWebResources.UserGroupName
                    </label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserGroupName, new { @maxlength = "100", @class = "form-control", @title = "User Group Name", @placeholder = "User Group Name" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="RoleTypeId">
                        <span class="required">*</span>   @BlastManagerWEB.App_GlobalResources.BlastManagerWebResources.RoleType
                    </label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.RoleTypeId, Model.RoleTypeList, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="Description">
                        <span class="required">*</span>    @BlastManagerWEB.App_GlobalResources.BlastManagerWebResources.UserGroupDescription
                    </label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(m => m.Description, new { @maxlength = "500", @class = "form-control", @rows = "5", @cols = "auto", @title = "Description", @placeholder = "Description" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="RoleTypeId">
                        @BlastManagerWEB.App_GlobalResources.BlastManagerWebResources.UserGroupCreatedBy
                    </label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.CreatedBy</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="RoleTypeId">
                        @BlastManagerWEB.App_GlobalResources.BlastManagerWebResources.UserGroupCreatedDate
                    </label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Created</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="RoleTypeId">
                        @BlastManagerWEB.App_GlobalResources.BlastManagerWebResources.OrganizationUpdatedBy
                    </label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.UpdatedBy</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="RoleTypeId">
                        @BlastManagerWEB.App_GlobalResources.BlastManagerWebResources.OrganizationUpdatedDate
                    </label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Updated</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                    </label>
                    <div class="col-sm-10">
                        <input class="btn btn-primary" type="submit" value="Save" />
                        <a class="btn btn-info" href='@Url.Action(Constants.Controllers.User_UserGroup, Constants.Controllers.User)'><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>@BlastManagerWEB.App_GlobalResources.BlastManagerWebResources.Back</a>
                    </div>
                </div>
                <div class="summary-error">
                    @Html.ValidationSummary(false)
                </div>
            </fieldset>
        }
    </div>
    <div class="table-responsive well">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @BlastManagerWEB.App_GlobalResources.BlastManagerWebResources.UserId
                    </th>
                    <th>
                        @BlastManagerWEB.App_GlobalResources.BlastManagerWebResources.UserName
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.UserList != null && Model.UserList.Count > 0)
                {
                    foreach (var result in Model.UserList)
                    {
                        <tr>
                            <td>@Convert.ToString(result.GUID_User)</td>
                            <td>@Convert.ToString(result.UserDisplayName)</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2">No User.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@section scripts
{
    <script type="text/javascript">
    </script>
}

